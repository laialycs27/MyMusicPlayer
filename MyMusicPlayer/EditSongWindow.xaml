<Window x:Class="MyMusicPlayer.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Track Name -->
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Track Name"/>
            <TextBox Text="{Binding TrackName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Artist -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Artist"/>
            <TextBox Text="{Binding ArtistName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Album -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Album"/>
            <TextBox Text="{Binding AlbumName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Images List -->
        <StackPanel Grid.Row="3">
            <TextBlock Text="Custom Images"/>
            <ListBox x:Name="ImagesListBox" ItemsSource="{Binding Images}" Height="150"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add Image" Width="90" Margin="5" Click="AddImage_Click"/>
            <Button Content="Remove Image" Width="100" Margin="5" Click="RemoveImage_Click"/>
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click"/>
        </StackPanel>

    </Grid>
</Window>
