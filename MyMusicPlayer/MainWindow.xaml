<Window x:Class="MyMusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Station"
        Height="700"
        Width="1100"
        Background="#1E1E1E"
        Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Metadata -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock x:Name="txtStatus"
                           Text="Ready"
                           Foreground="#999"
                           FontSize="14"
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="txtCurrentSong"
                           Text="No Song Selected"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,5"/>

                <TextBlock x:Name="txtArtist"
                           Text="Artist: -"
                           FontSize="16"
                           Foreground="#CCCCCC"
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="txtAlbum"
                           Text="Album: -"
                           FontSize="16"
                           Foreground="#CCCCCC"
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="txtFilePath"
                           Text="Path: -"
                           FontSize="12"
                           Foreground="#777"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="20,5"/>
            </StackPanel>

            <!-- Artwork -->
            <Border Grid.Row="1"
                    Width="350"
                    Height="350"
                    CornerRadius="20"
                    BorderBrush="#444"
                    BorderThickness="2"
                    Background="#2A2A2A"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <Image x:Name="imgArtwork"
                       Stretch="UniformToFill"/>
            </Border>

            <!-- Progress -->
            <Slider x:Name="sliderProgress"
                    Grid.Row="2"
                    Margin="40,25,40,10"
                    Height="30"
                    IsMoveToPointEnabled="True"
                    PreviewMouseLeftButtonDown="Slider_DragStarted"
                    PreviewMouseLeftButtonUp="Slider_DragCompleted"/>

            <!-- Controls -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10">

                <Button Content="STOP"
                        Click="BtnStop_Click"
                        Width="90"
                        Height="45"
                        Margin="10"
                        Background="#333"
                        Foreground="White"
                        BorderBrush="#555"/>

                <Button Content="PLAY"
                        Click="BtnPlay_Click"
                        Width="110"
                        Height="55"
                        Margin="10"
                        Background="#007ACC"
                        Foreground="White"
                        BorderBrush="#007ACC"
                        FontWeight="Bold"/>

                <Button Content="PAUSE"
                        Click="BtnPause_Click"
                        Width="90"
                        Height="45"
                        Margin="10"
                        Background="#333"
                        Foreground="White"
                        BorderBrush="#555"/>
            </StackPanel>
        </Grid>
        
        

        <!-- RIGHT SIDE -->
        <Grid Grid.Column="1" Margin="30,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Library"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,15"/>

            <ListBox x:Name="lstLibrary"
                     Grid.Row="1"
                     Background="#2A2A2A"
                     Foreground="White"
                     BorderBrush="#444"
                     BorderThickness="1"
                     MouseDoubleClick="LstLibrary_MouseDoubleClick"
                     Padding="10"/>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,15">

                <Button Content="Add"
                        Click="BtnAdd_Click"
                        Width="90"
                        Height="35"
                        Margin="5"
                        Background="#444"
                        Foreground="White"/>

                <Button Content="Remove"
                        Click="BtnRemove_Click"
                        Width="90"
                        Height="35"
                        Margin="5"
                        Background="#444"
                        Foreground="White"/>

                <Button Content="Edit"
                        Click="BtnEdit_Click"
                        Width="90"
                        Height="35"
                        Margin="5"
                        Background="#444"
                        Foreground="White"/>

                <Button Content="Settings"
                        Click="Settings_Click"
                        Width="90"
                        Height="35"
                        Margin="5"
                        Background="#444"
                        Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
